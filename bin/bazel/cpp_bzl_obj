#!/bin/bash
# $1 = Project Name

# Get variables
OBJECT=$1

# Which directory?
# This one for now
# MUST be in the directory where the files are going

# Create object files
# Header
touch $OBJECT.h
echo "#ifndef $OBJECT.H
#define $OBJECT.H

class $OBJECT {
	public:
		$OBJECT();
		~$OBJECT();

	private:
};

#endif" >> $OBJECT.h

# Source
touch $OBJECT.cc
echo "#include \"$OBJECT.h\"

$OBJECT::$OBJECT() {
}

$OBJECT::~$OBJECT() {
}" >> $OBJECT.cc
